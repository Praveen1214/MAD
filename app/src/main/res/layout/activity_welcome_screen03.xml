<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.welcome_screen_03">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearFeaturesbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/ellipse_20"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            android:background="#D9D9D9" />

        <View
            android:id="@+id/ellipse_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            android:background="#D9D9D9" />

        <View
            android:id="@+id/ellipse_19"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            android:background="#0076B8" />
    </LinearLayout>

    <TextView
            android:id="@+id/skip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="337dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="52dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/para_primar"
            android:textAppearance="@style/para_primar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <LinearLayout
            android:id="@+id/linearFeaturesbutton"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_gravity="bottom|center"
            android:background="#9C27B0"
            android:backgroundTint="#3C96F3FF"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="19dp"
            android:paddingTop="37dp"
            android:paddingEnd="50dp"
            android:paddingBottom="37dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="53dp"
            tools:ignore="ExtraText,UnknownId">>

            <TextView
                android:id="@+id/find_your_c"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/find_your_c"
                android:textAppearance="@style/find_your_c"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/platform_ta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="4sp"
                android:text="@string/platform_ta"
                android:textAppearance="@style/user_friend"
                android:textSize="17sp"
                android:translationY="-1.32sp" />

            <RelativeLayout


                android:id="@+id/ntxbtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:clipToOutline="true"
                android:gravity="center"
                tools:ignore="DuplicateIds">

                <TextView
                    android:id="@+id/create_acco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/create_acco"
                    android:textAppearance="@style/create_acco"
                    android:textSize="17sp" />
            </RelativeLayout>

        </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187"
        app:srcCompat="@drawable/find_notes" />


</androidx.constraintlayout.widget.ConstraintLayout>



